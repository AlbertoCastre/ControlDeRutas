            <Button.Background>
                <ImageBrush ImageSource="/Vistas/RastreoIcon.png"/>
            </Button.Background>
        </Button>
        <Label Content="Rastreo " HorizontalAlignment="Left" Height="46" Margin="307,260,0,0" VerticalAlignment="Top" Width="62" HorizontalContentAlignment="Center"/>
        <Button x:Name="btnEnvios" HorizontalAlignment="Left" Height="85" Margin="418,157,0,0" VerticalAlignment="Top" Width="80" BorderBrush="{x:Null}" Click="btnEnvios_Click">
            <Button.Background>
                <ImageBrush ImageSource="/Vistas/envioicon.png"/>
